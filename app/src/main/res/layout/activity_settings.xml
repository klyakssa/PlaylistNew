<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Playlist"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin_4dp"
        android:paddingEnd="52dp">



            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:padding="@dimen/padding"
                android:textColor="?attr/colorPrimaryVariant" />

            <TextView
                android:layout_width="@dimen/layout_width"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="@string/settings"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_end_head"
                android:paddingLeft="@dimen/padding_left"
                android:paddingBottom="@dimen/padding_left"
                android:paddingTop="@dimen/margin_10dp"
                android:textSize="@dimen/title"
                android:fontFamily="@font/ys_display_medium"
                android:textFontWeight="500"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_set_61dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nightDayText"
            android:layout_width="@dimen/layout_width"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginTop="@dimen/margin_21dp"
            android:layout_marginBottom="@dimen/margin_21dp"
            android:layout_weight="15"
            android:text="@string/theme"
            style="@style/Settings" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="@dimen/layout_width"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_weight="2"
            android:backgroundTint="?attr/colorSecondaryVariant"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sharingProgram"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_set_61dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_main"
        android:paddingTop="@dimen/padding_19dp"
        android:paddingEnd="@dimen/padding_end"
        android:paddingBottom="@dimen/padding_18dp">

        <TextView
            android:id="@+id/shareText"
            android:layout_width="@dimen/layout_width"
            android:layout_height="match_parent"
            android:layout_weight="32"
            android:text="@string/share"
            style="@style/Settings"/>

        <TextView
            android:layout_width="@dimen/layout_width"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:drawableLeft="@drawable/ic_share" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/supportButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_set_61dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_main"
        android:paddingTop="@dimen/padding_19dp"
        android:paddingBottom="@dimen/padding_18dp"
        android:paddingEnd="@dimen/padding_end">

        <TextView
            android:id="@+id/supportText"
            android:layout_width="@dimen/layout_width"
            android:layout_height="match_parent"
            android:layout_weight="32"
            android:text="@string/support"
            style="@style/Settings"/>

        <TextView
            android:layout_width="@dimen/layout_width"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:backgroundTint="@color/YP_text_gray"
            android:drawableLeft="@drawable/ic_group"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/termsButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_set_61dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_main"
        android:paddingTop="@dimen/padding_19dp"
        android:paddingBottom="@dimen/padding_18dp"
        android:paddingEnd="@dimen/padding_end">

        <TextView
            android:id="@+id/termsText"
            android:layout_width="@dimen/layout_width"
            android:layout_height="match_parent"
            android:layout_weight="32"
            android:text="@string/terms"
            style="@style/Settings"/>

        <TextView
            android:layout_width="@dimen/layout_width"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:backgroundTint="@color/YP_text_gray"
            app:drawableLeftCompat="@drawable/ic_arrow_forward" />

    </LinearLayout>

</LinearLayout>