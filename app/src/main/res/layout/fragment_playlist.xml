<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.library.Fragments.Playlist.PlaylistFragment">

    <Button
        android:id="@+id/newPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="@string/newPlaylist"
        android:gravity="center_horizontal|center"
        android:textAllCaps="false"
        android:textSize="@dimen/ys_regular_14sp"
        style="@style/UpdateButton" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nothing"
                android:layout_marginTop="46dp"
                android:layout_marginRight="@dimen/margin_120dp"
                android:layout_marginLeft="@dimen/margin_120dp"
                style="@style/PlaceNothing"/>

            <TextView
                android:id="@+id/playlistText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_24dp"
                android:layout_marginRight="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_main16"
                style="@style/PlaceTextLibrary"/>

        </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_main16"
        android:layout_marginStart="@dimen/margin_main16"
        android:layout_marginEnd="@dimen/margin_main16"/>

    </FrameLayout>

</LinearLayout>