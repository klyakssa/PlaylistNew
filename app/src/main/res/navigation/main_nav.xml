<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.kuzmin.playlist.presentation.library.LibraryFragment"
        android:label="activity_library"
        tools:layout="@layout/activity_library" >
        <action
            android:id="@+id/action_libraryFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
        <argument
            android:name="track"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.kuzmin.playlist.presentation.search.TracksSearchFragment"
        android:label="activity_search"
        tools:layout="@layout/activity_search" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.kuzmin.playlist.presentation.settings.activity.SettingsFragment"
        android:label="activity_settings"
        tools:layout="@layout/activity_settings" />
    <activity
        android:id="@+id/playerActivity"
        android:name="com.kuzmin.playlist.presentation.audioplayer.PlayerActivity"
        android:label="activity_player"
        tools:layout="@layout/activity_player" />
</navigation>