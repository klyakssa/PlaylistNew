<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonSearch" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/button_main_shape</item>
        <item name="icon">@drawable/ic_search</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/main_text22</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ButtonLibrary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/button_main</item>
        <item name="icon">@drawable/ic_library</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/main_text22</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ButtonSettings" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/button_main</item>
        <item name="icon">@drawable/ic_settings</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/main_text22</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="Settings">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/ys_regular</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SearchEditText">
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textSize">@dimen/ys_regular</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/ic_search_24</item>
    </style>

    <style name="UpdateButton" >
        <item name="android:background">@drawable/update_button_shape</item>
        <item name="backgroundTint">?attr/colorPlaceholderImage</item>
        <item name="android:textSize">@dimen/ys_regular_13sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPlaceholderMessage</item>
    </style>
    <style name="PlaceNothing">
        <item name="android:layout_width">@dimen/margin_120dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">@dimen/margin_120dp</item>
    </style>
    <style name="PlaceTextLibrary">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_19sp</item>
        <item name="android:textColor">?attr/colorPlayListAndFavorite</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/ys_regular_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources> 